<Defs>

	<ThingDef ParentName="ApparelArmorReconBase">
		<defName>HRF_SteamArmor</defName>
		<label>steam armor</label>
		<description>A suit of armor with an onboard steam generator that steadily creates steam pressure. This steam can be used to power additional steam devices including accessories, apparel, and weapons. It also comes with an internal steam repeater
		.</description>
		<apparel>
			<tags>
				<li>SpacerMilitary</li>
			</tags>
		</apparel>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<label>steamshot</label>
				<defaultProjectile>Bullet_AutocannonTurret</defaultProjectile>
				<warmupTime>0</warmupTime>
				<minRange>8.9</minRange>
				<range>32.9</range>
				<ticksBetweenBurstShots>17</ticksBetweenBurstShots>
				<burstShotCount>3</burstShotCount>
				<soundCast>Shot_Autocannon</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>12</muzzleFlashScale>
			</li>
		</verbs>
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="VFECore.CompProperties_ApparelHediffs">
				<hediffDefnames>
					<li>HRF_Steam_Hediff</li>
				</hediffDefnames>
			</li>
			<li Class="MVCF.Comps.CompProperties_VerbGiver">
				<verbProps>
					<li>
						<label>steamshot</label>
						<canBeToggled>true</canBeToggled>
					</li>
				</verbProps>
			</li>
			<li Class="HediffResourceFramework.CompProperties_ApparelAdjustHediffs">
				<hediffOptions>
					<li>
						<hediff>HRF_Steam_Hediff</hediff>
						<resourcePerTick>100</resourcePerTick>
						<qualityScalesResourcePerTick>true</qualityScalesResourcePerTick>
						<addHediffIfMissing>true</addHediffIfMissing>
						<!-- default is false -->
						<maxResourceCapacityOffset>5</maxResourceCapacityOffset>
						<qualityScalesCapacityOffset>true</qualityScalesCapacityOffset>
						<disallowEquipIfHediffMissing>false</disallowEquipIfHediffMissing>
						
						<dropIfHediffMissing>false</dropIfHediffMissing>
						<blackListHediffsPreventEquipping>
							<li>HRF_Mana_Hediff</li>
						</blackListHediffsPreventEquipping>
						<dropWeaponOrApparelIfBlacklistHediff>
							<li>HRF_Mana_Hediff</li>
						</dropWeaponOrApparelIfBlacklistHediff>
					</li>
				</hediffOptions>
			</li>
		</comps>
		<modExtensions>
			<li Class="HediffResourceFramework.HediffAdjustOptions">
				<hediffOptions>
					<li>
						<hediff>HRF_Steam_Hediff</hediff>
						<resourcePerUse>-0.5</resourcePerUse>
						<disableIfMissingHediff>false</disableIfMissingHediff>
						<disableReason>Steam is empty</disableReason>
						<minimumResourcePerUse>0.5</minimumResourcePerUse>
					</li>
				</hediffOptions>
			</li>
		</modExtensions>
	</ThingDef>

	<ThingDef ParentName="ApparelArmorHelmetReconBase">
		<defName>HRF_SteamHelmet</defName>
		<label>steam helmet</label>
		<description>A helmet with a steam port, allowing it to be connected to a steam generator and power steam devices. This helmet contains a side mounted steam rail blaster.</description>
		<apparel>
			<tags>
				<li>SpacerMilitary</li>
			</tags>
		</apparel>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<label>steamrail</label>
				<defaultProjectile>Bullet_TurretSniper</defaultProjectile>
				<warmupTime>0</warmupTime>
				<minRange>2.9</minRange>
				<range>45.9</range>
				<burstShotCount>1</burstShotCount>
				<soundCast>Shot_TurretSniper</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>18</muzzleFlashScale>
			</li>
		</verbs>
		<comps>
			<li Class="MVCF.Comps.CompProperties_VerbGiver">
				<verbProps>
					<li>
						<label>steamrail</label>
						<canBeToggled>true</canBeToggled>
					</li>
				</verbProps>
			</li>
			<li Class="HediffResourceFramework.CompProperties_ApparelAdjustHediffs">
				<hediffOptions>
					<li>
						<hediff>HRF_Steam_Hediff</hediff>
						<addHediffIfMissing>false</addHediffIfMissing>
						<maxResourceCapacityOffset>-2</maxResourceCapacityOffset>
						<qualityScalesResourcePerTick>false</qualityScalesResourcePerTick>
						<disallowEquipIfHediffMissing>true</disallowEquipIfHediffMissing>
						<cannotEquipReason>No enough steam</cannotEquipReason>
						<dropIfHediffMissing>true</dropIfHediffMissing>
