<Defs>

	<ThingDef ParentName="ApparelArmorReconBase">
		<defName>HRF_SteamArmor</defName>
		<label>steam armor</label>
		<description>A suit of armor with an onboard steam generator that steadily creates steam pressure. This steam can be used to power additional steam devices including accessories, apparel, and weapons. It also comes with an internal steam repeater.</description>
		<apparel>
			<tags>
				<li>SpacerMilitary</li>
			</tags>
		</apparel>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<label>steamshot</label>
				<defaultProjectile>Bullet_AutocannonTurret</defaultProjectile>
				<warmupTime>0</warmupTime>
				<minRange>8.9</minRange>
				<range>32.9</range>
				<ticksBetweenBurstShots>17</ticksBetweenBurstShots>
				<burstShotCount>3</burstShotCount>
				<soundCast>Shot_Autocannon</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>12</muzzleFlashScale>
			</li>
		</verbs>
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="VFECore.CompProperties_ApparelHediffs">
				<hediffDefnames>
					<li>HRF_Steam_Hediff</li>
				</hediffDefnames>
			</li>
			<li Class="MVCF.Comps.CompProperties_VerbGiver">
				<verbProps>
					<li>
						<label>steamshot</label>
						<canBeToggled>true</canBeToggled>
					</li>
				</verbProps>
			</li>
			<li Class="HediffResourceFramework.CompProperties_ApparelAdjustHediffs">
				<hediffOptions>
					<li>
						<hediff>HRF_Steam_Hediff</hediff>
						<resourceOffset>100</resourceOffset>
						<qualityScalesResourceOffset>true</qualityScalesResourceOffset>
						<addHediffIfMissing>true</addHediffIfMissing>
						<!-- default is false -->
						<maxResourceCapacityOffset>5</maxResourceCapacityOffset>
						<qualityScalesCapacityOffset>true</qualityScalesCapacityOffset>
						<disallowEquippingIfEmptyNullHediff>false</disallowEquippingIfEmptyNullHediff>
						
						<dropApparelIfEmptyNullHediff>false</dropApparelIfEmptyNullHediff>
						<blackListHediffsPreventEquipping>
							<li>HRF_Mana_Hediff</li>
						</blackListHediffsPreventEquipping>
					</li>
				</hediffOptions>
			</li>
		</comps>
		<modExtensions>
			<li Class="HediffResourceFramework.HediffAdjustOptions">
				<hediffOptions>
					<li>
						<hediff>HRF_Steam_Hediff</hediff>
						<resourceOffset>-0.5</resourceOffset>
						<disableOnEmptyOrMissingHediff>false</disableOnEmptyOrMissingHediff>
						<disableReason>Steam is empty</disableReason>
						<!-- <minimumResourceCastRequirement>0.5</minimumResourceCastRequirement> -->
					</li>
				</hediffOptions>
			</li>
		</modExtensions>
	</ThingDef>

	<ThingDef ParentName="ApparelArmorHelmetReconBase">
		<defName>HRF_SteamHelmet</defName>
		<label>steam helmet</label>
		<description>A helmet with a steam port, allowing it to be connected to a steam generator and power steam devices. This helmet contains a side mounted steam rail blaster.</description>
		<apparel>
			<tags>
				<li>SpacerMilitary</li>
			</tags>
		</apparel>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<label>steamrail</label>
				<defaultProjectile>Bullet_TurretSniper</defaultProjectile>
				<warmupTime>0</warmupTime>
				<minRange>2.9</minRange>
				<range>45.9</range>
				<burstShotCount>1</burstShotCount>
				<soundCast>Shot_TurretSniper</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>18</muzzleFlashScale>
			</li>
		</verbs>
		<comps>
			<li Class="MVCF.Comps.CompProperties_VerbGiver">
				<verbProps>
					<li>
						<label>steamrail</label>
						<canBeToggled>true</canBeToggled>
					</li>
				</verbProps>
			</li>
			<li Class="HediffResourceFramework.CompProperties_ApparelAdjustHediffs">
				<hediffOptions>
					<li>
						<hediff>HRF_Steam_Hediff</hediff>
						<addHediffIfMissing>false</addHediffIfMissing>
						<maxResourceCapacityOffset>-2</maxResourceCapacityOffset>
						<qualityScalesCapacityOffset>false</qualityScalesCapacityOffset>
						<disallowEquippingIfEmptyNullHediff>true</disallowEquippingIfEmptyNullHediff>
						<cannotEquipReason>No enough steam</cannotEquipReason>
						<dropApparelIfEmptyNullHediff>true</dropApparelIfEmptyNullHediff>
						<blackListHediffsPreventEquipping>
							<li>HRF_Mana_Hediff</li>
						</blackListHediffsPreventEquipping>
						<cannotEquipReasonIncompatible>Incompatible with </cannotEquipReasonIncompatible>
					</li>
				</hediffOptions>
			</li>
		</comps>
		<modExtensions>
			<li Class="HediffResourceFramework.HediffAdjustOptions">
				<hediffOptions>
					<li>
						<hediff>HRF_Steam_Hediff</hediff>
						<resourceOffset>-2.5</resourceOffset>
						<disableOnEmptyOrMissingHediff>true</disableOnEmptyOrMissingHediff>
						<disableReason>Steam is empty</disableReason>
						<minimumResourceCastRequirement>2.5</minimumResourceCastRequirement>
					</li>
				</hediffOptions>
			</li>
		</modExtensions>
	</ThingDef>

	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>HRF_SteamRepeater</defName>
		<label>steam repeater</label>
		<description>A multi-barrel steam powered blaster. It will repeatedly fire rounds until it runs out of steam power, at which point it has a lengthy rearming period before it may be fired again.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponRanged/Minigun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<statBases>
			<WorkToMake>60000</WorkToMake>
			<Mass>10</Mass>
			<AccuracyTouch>0.15</AccuracyTouch>
			<AccuracyShort>0.25</AccuracyShort>
			<AccuracyMedium>0.25</AccuracyMedium>
			<AccuracyLong>0.18</AccuracyLong>
			<RangedWeapon_Cooldown>5</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>160</Steel>
			<ComponentIndustrial>20</ComponentIndustrial>
		</costList>
		<recipeMaker>
			<researchPrerequisite>MultibarrelWeapons</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
		</recipeMaker>
		<techLevel>Industrial</techLevel>
		<weaponTags>
			<li>GunHeavy</li>
		</weaponTags>
		<equippedStatOffsets>
			<MoveSpeed>-0.25</MoveSpeed>
		</equippedStatOffsets>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<label>steamrepeater</label>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Minigun</defaultProjectile>
				<warmupTime>0</warmupTime>
				<range>30.9</range>
				<burstShotCount>25</burstShotCount>
				<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
				<soundCast>Shot_Minigun</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<comps>
			<li Class="MVCF.Comps.CompProperties_VerbGiver">
				<verbProps>
					<li>
						<label>steamrepeater</label>
						<canBeToggled>true</canBeToggled>
					</li>
				</verbProps>
			</li>
			<li Class="HediffResourceFramework.CompProperties_WeaponAdjustHediffs">
				<hediffOptions>
					<li>
						<hediff>HRF_Steam_Hediff</hediff>
						<resourceOffset>100</resourceOffset>
						<qualityScalesResourceOffset>true</qualityScalesResourceOffset>
						<addHediffIfMissing>false</addHediffIfMissing> <!-- default is false -->
						<maxResourceCapacityOffset>5</maxResourceCapacityOffset>
						<qualityScalesCapacityOffset>true</qualityScalesCapacityOffset>
						<disallowEquippingIfEmptyNullHediff>true</disallowEquippingIfEmptyNullHediff>
						<cannotEquipReason>No enough steam</cannotEquipReason>
						<dropWeaponIfEmptyNullHediff>true</dropWeaponIfEmptyNullHediff>
						<blackListHediffsPreventEquipping>
							<li>HRF_Mana_Hediff</li>
						</blackListHediffsPreventEquipping>
						<cannotEquipReasonIncompatible>Incompatible with </cannotEquipReasonIncompatible>

					</li>
				</hediffOptions>
			</li>
		</comps>
		<tools>
			<li>
				<label>barrels</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>11.7</power>
				<cooldownTime>2.6</cooldownTime>
			</li>
		</tools>
		<modExtensions>
			<li Class="HediffResourceFramework.HediffAdjustOptions">
				<hediffOptions>
					<li>
						<hediff>HRF_Steam_Hediff</hediff>
						<resourceOffset>-0.2</resourceOffset>
						<disableOnEmptyOrMissingHediff>true</disableOnEmptyOrMissingHediff>
						<disableReason>Steam is empty</disableReason>
					</li>
				</hediffOptions>
			</li>
		</modExtensions>
	</ThingDef>

